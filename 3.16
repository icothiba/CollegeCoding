	int num;

	cin >> fname;
	cin >> lname;
	cin >> num;

   string login = lname;


   if (lname.length() >= 5) {

       login = lname.substr (0, 5);    }

   login += fname.substr (0,1) + to_string (num%100);

   cout << "Your login name: " << login<< endl;
	
