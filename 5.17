If the input is 9 8 7 6 5 4 3 2 1 0, the output is:

0 9 4.5


#include <iostream>
#include <vector>

using namespace std;

int main() {
   vector<int> userValues(10);
   int i;
   
   for (i = 0; i < 10; ++i) {
      cin >> userValues.at(i);
   }
   
   int minVal = userValues.at(0);
   int maxVal = userValues.at(0); 
   int sumVals = userValues.at(0);
   
   for (i = 1; i < 10; ++i) {
      if (userValues.at(i) < minVal) {
         minVal = userValues.at(i);
      }
      
      if (userValues.at(i) > maxVal) {
         maxVal = userValues.at(i);
      }
      
      sumVals += userValues.at(i);
   }
   
   double average = static_cast<double>(sumVals) / 10.0;
   
   cout << minVal << " " << maxVal << " " << average << endl;
   
   return 0;
}
