If the input is:

12 18 4 9

the output is:

Maximum is 18 
Minimum is 4


#include <iostream>
using namespace std;

int MaxNumber(int num1, int num2, int num3, int num4) {
    int maxNum = num1;
    if (num2 > maxNum) {
        maxNum = num2;
    }
    if (num3 > maxNum) {
        maxNum = num3;
    }
    if (num4 > maxNum) {
        maxNum = num4;
    }
    return maxNum;
}

int MinNumber(int num1, int num2, int num3, int num4) {
    int minNum = num1;
    if (num2 < minNum) {
        minNum = num2;
    }
    if (num3 < minNum) {
        minNum = num3;
    }
    if (num4 < minNum) {
        minNum = num4;
    }
    return minNum;
}

int main() {
   int num1, num2, num3, num4;

    cin >> num1 >> num2 >> num3 >> num4;

    int maxNum = MaxNumber(num1, num2, num3, num4);
    int minNum = MinNumber(num1, num2, num3, num4);

    cout << "Maximum is " << maxNum << endl;
    cout << "Minimum is " << minNum << endl;

   return 0;
}
