If the input is:

mypassword

the output is:

Myp@$$word!

------------------------------------

#include <iostream>
#include <string>
using namespace std;

int main() {
   
   string password;
   int i;
   
   cin >> password;
   
   for (i = 0; i < password.length(); ++i) {
      if (password.at(i) == 'i') {
         password.at(i) = '1';
      }
      else if (password.at(i) == 'a') {
            password.at(i) = '@';
      }
      else if (password.at(i) == 'm') {
            password.at(i) = 'M';
      }
      else if (password.at(i) == 'B') {
            password.at(i) = '8';
      }
      else if (password.at(i) == 's') {
            password.at(i) = '$';
      }
   }
   
   password = password + '!';
   cout << password << endl;
   
   return 0;
}
